<?php
try
{
    $pdo_options[PDO::ATTR_ERRMODE] = PDO::ERRMODE_EXCEPTION;
    $bdd = new PDO('mysql:host=localhost;dbname=dbchrno', 'root', '', $pdo_options);
     
     
    // On recupere tout le contenu de la table Client
$reponse = $bdd->query('SELECT id, titre, contenu FROM news');
  
// On affiche le resultat
while ($donnees = $reponse->fetch())
{
    //On affiche l'id et le nom du client en cours
    echo "</TR>";
    echo "<TH> $donnees[id] </TH>";
    echo "<TH> $donnees[titre] </TH>";
    echo "<TH> $donnees[contenu] </TH>";
    echo "<TH> $donnees[date] </TH>";
    echo "</TR>";
 
     
}
$reponse->closeCursor();
}
catch(Exception $e)
{
    die('Erreur : '.$e->getMessage());
}
?>